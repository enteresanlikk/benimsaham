<section id="giris" class="success">
        <div class="container" align="center">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>GİRİŞ YAP</h2>
                    <hr class="star-light">
                </div>
            </div>
				<div class="col-lg-3"></div>
				<div class="col-lg-6"  style="background:#2C3E50;padding:10px;border-radius:10px;">
					
					<img src="img/logo.png" style="max-width:160px;padding-bottom:10px;" />
					
						<div class="col-lg-12" style="margin-bottom:15px;">
							<input type="text" class="form-control" ng-model="uye.kadi" placeholder="KULLANICI ADI" />
						</div>
						
						<div class="col-lg-12" style="margin-bottom:15px;">
							<input type="password" class="form-control" ng-model="uye.sifre" placeholder="ŞİFRE"/>
						</div>
						
						<div class="col-lg-12" style="margin-bottom:15px;">
							<button data-toggle="modal" data-target="#giris_sonuc" ng-click="GirisYap(uye.kadi,uye.sifre);" class="btn btn-success form-control">GİRİŞ YAP</button>
						</div>
					
					
					
					<div class="col-lg-12" style="margin-bottom:15px;">
						<p>Hesabın Yok mu? <a href="/Kayit-Ol" style="text-decoration:underline;">Kayıt Ol</a></p>
					</div>
					
				</div>

        </div>
    </section>

<div class="modal fade bs-example-modal-md" id="giris_sonuc" tabindex="-1" role="document" aria-labelledby="giris_sonuc">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content text-center" style="padding:10px;background:#d9534f;color:#fff;">
            <h4>{[{giris_sonuc}]}</h4>
        </div>
    </div>
</div>