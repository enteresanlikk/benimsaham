   <section id="kayit" class="success">
        <div class="container" align="center">
            <div class="row" >
                <div class="col-lg-12 text-center">
                    <h2>KAYIT OL</h2>
                    <hr class="star-light">
                </div>
            </div>
				<div class="col-lg-3"></div>
				<div class="col-lg-6"  style="background:#2C3E50;padding:10px;border-radius:10px;">
					
					<img src="img/logo.png" style="max-width:160px;padding-bottom:10px;" />
					
					<div class="col-lg-12" style="margin-bottom:15px;">
						<input type="text" class="form-control" ng-model="gg.kadi" placeholder="KULLANICI ADI"/>
					</div>
					
					<div class="col-lg-12" style="margin-bottom:15px;">
						<input type="password" class="form-control" ng-model="gg.sifre" placeholder="ŞİFRE"/>
					</div>
					
					<div class="col-lg-12" style="margin-bottom:15px;">
						<input type="password" class="form-control" ng-model="gg.sifre2" placeholder="ŞİFRE (TEKRAR)"/>
					</div>
					
					<div class="col-lg-12" style="margin-bottom:15px;">
						<input type="email" class="form-control" ng-model="gg.email" placeholder="EMAİL"/>
					</div>
					
					<div class="col-lg-12" style="margin-bottom:15px;">
						<input type="text" class="form-control" ng-model="gg.telefon" placeholder="TELEFON NUMARASI"/>
					</div>
										
					<div class="col-lg-12" style="margin-bottom:15px;">
						<button data-toggle="modal" data-target="#kayit_sonuc" ng-click="KayitOl(gg.kadi,gg.sifre,gg.sifre2,gg.email,gg.telefon);"  class="btn btn-success form-control">KAYIT OL</button>
					</div>
					
					<div class="col-lg-12" style="margin-bottom:15px;">
						<p style="color:#fff;">Hesabın Var mı? <a href="/Giris-Yap" style="text-decoration:underline;">Giriş Yap</a></p>
					</div>
					
				</div>

        </div>
    </section>

<div class="modal fade bs-example-modal-md" id="kayit_sonuc" tabindex="-1" role="document" aria-labelledby="kayit_sonuc">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content text-center" style="padding:10px;background:#2C3E50;color:#fff;">
            <h4>{[{kayit_sonuc}]}</h4>
        </div>
    </div>
</div>